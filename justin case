import tkinter
from tkinter import *
from tkinter import font
from PIL import Image, ImageTk


root = Tk()
root.geometry("1400x700")
root.title("3 дни в Барселона")
image_flag = PhotoImage(file="img.png")
root.iconphoto(True, image_flag)

font = font.nametofont("TkDefaultFont")
font.configure(family="Algerian",
               size=40,
               weight="bold")

start_frame = tkinter.Frame(root)
players_frame = tkinter.Frame(root)
app_frame = tkinter.Frame(root)


def show_start_frame():
    start_frame.pack()
    players_frame.forget()
    app_frame.forget()

def show_players_frame():
    start_frame.forget()
    players_frame.pack()
    app_frame.forget()

def show_app_frame():
    players_frame.forget()
    app_frame.pack()
    start_frame.forget()

#start_frame code
title_label = tkinter.Label(start_frame,
                            text="3 Days In Barcelona",
                            font=font).pack()
Canvas = Canvas(start_frame,
                width=750,
                height=500)
Canvas.pack()
img = (Image.open("img.png"))
resized_image = img.resize((600, 400))
new_image = ImageTk.PhotoImage(resized_image)
Canvas.create_image(75,70,
                    anchor=NW,
                    image=new_image)
button = Button(start_frame,
                text="Start",
                command=show_players_frame).pack()
#start_frame code end
#player_frame code
title_label = tkinter.Label(players_frame,
                            text="Кой използва апликацията?",
                            font=font).pack()
members = ["Neli", "Teo", "Stefan"]

teo_img = Image.open("teo.png")
teo_img = teo_img.resize((300, 300))
teo_img = ImageTk.PhotoImage(teo_img)

neli_img = Image.open("neli.png")
neli_img = neli_img.resize((300, 300))
neli_img = ImageTk.PhotoImage(neli_img)

stefan_img = Image.open("stefan.png")
stefan_img = stefan_img.resize((300, 300))
stefan_img = ImageTk.PhotoImage(stefan_img)

images = [neli_img, teo_img, stefan_img]
x = IntVar()
#player_frame code end
#app_frame and functionality
time = 0

app_frame_back_button = tkinter.Button(app_frame,
                             text="Назад",
                             command=show_players_frame).pack()
#app_frame and functionality end
def chosen_function():
    if x.get()==0:
        print("Здравей Нели!")
    if x.get()==1:
        print("Здравей Teo!")
    if x.get()==2:
        print("Здравей Стефан!")
for i in range(len(members)):
    radiobutton = Radiobutton(players_frame,
                              text=members[i],
                              variable=x,
                              value=i,
                              padx = 20,
                              image=images[i],
                              indicatoron=0,
                              command=chosen_function
                              )
    radiobutton.pack(side=LEFT)

button_players = Button(players_frame,
                     text="Избери",
                     command=show_app_frame)
button_players.pack()



show_start_frame()

root.mainloop()


locations = {'Парк"лабиринт на хорта':(),
#искам да направя червеното да се снижава като се снижи и навигацията

